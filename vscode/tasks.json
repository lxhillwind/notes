// vim:ft=jsonc
{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "vim",
                        "type": "shell",
                        "command": "vim",
                        // setcursorcharpos() is available since v8.2.2324
                        "args": ["${file}", "-c", "${lineNumber}", "-c", "silent! call setcursorcharpos(${lineNumber}, ${columnNumber})"],
                        "presentation": {
                                "focus": true,
                                "close": true,
                                "showReuseMessage": false
                        },
                        "problemMatcher": []
                },
                {
                        "label": "project in current window",
                        "type": "shell",
                        "command": "sh",
                        "args": ["-c", "find-repo ~/repos | fzf | xargs -r code -r"],
                        "presentation": {
                                "focus": true,
                                "close": true,
                                "showReuseMessage": false
                        },
                        "problemMatcher": []
                },
                {
                        "label": "project in new window",
                        "type": "shell",
                        "command": "sh",
                        "args": ["-c", "find-repo ~/repos | fzf | xargs -r code -n"],
                        "presentation": {
                                "focus": true,
                                "close": true,
                                "showReuseMessage": false
                        },
                        "problemMatcher": []
                }
        ]
}
